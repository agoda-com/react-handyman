{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "noWatch": true
  },
  "extends": [
    "agoda"
  ],
  "rules": {
    "@typescript-eslint/indent": [
      "error",
      2
    ],
    "react/jsx-indent": [
      "error",
      2
    ]
  },
  "overrides": [
    {
      "files": [
        "packages/sandbox/**/*"
      ],
      "rules": {
        "import/no-unresolved": [
          "error",
          {
            "ignore": [
              "i18n-jsx"
            ]
          }
        ]
      }
    }
  ]
}