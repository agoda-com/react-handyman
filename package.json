{
  "name": "react-handyman",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "description": "Utils and packages to extend your react.js based app",
  "author": "matmalkowski <monkey3310@gmail.com>",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "coveralls": "^3.0.4",
    "jest": "^24.8.0",
    "lerna": "^3.13.1",
    "typescript": "3.5.1"
  },
  "scripts": {
    "install": "lerna link",
    "bs": "lerna bootstrap",
    "typecheck": "lerna run typecheck",
    "build": "lerna run build",
    "test": "jest",
    "coveralls": "jest --coverage && nodecat ./coverage/lcov.info | coveralls",
    "version:patch": "lerna version patch --no-push"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!<rootDir>/packages/sandbox/**/*",
      "!**/node_modules/"
    ]
  }
}