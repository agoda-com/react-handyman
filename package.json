{
  "name": "react-handyman",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "description": "Utils and packages to extend your react.js based app",
  "author": "matmalkowski <monkey3310@gmail.com>",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "commitizen": "3.1.1",
    "coveralls": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.13.1",
    "npm-run-all": "^4.1.5",
    "typescript": "3.5.1"
  },
  "scripts": {
    "cz": "git-cz",
    "install": "lerna link",
    "bs": "lerna bootstrap",
    "typecheck": "lerna run typecheck",
    "build": "lerna run build",
    "watch": "lerna run --parallel watch",
    "test": "jest",
    "coveralls": "jest --coverage && nodecat ./coverage/lcov.info | coveralls",
    "semantic-release": "lerna run --concurrency 1 semantic-release"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!<rootDir>/packages/sandbox/**/*",
      "!**/node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matmalkowski/react-handyman.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
